.Hero
  &-head
    display: flex
    justify-content: space-between
    align-items: center
    position: relative
    margin: 0
    padding: 1em 0

  &-logo h3
    font-size: 28px
    margin: 0
    padding: 0

  &-nav ul
    list-style: none
    margin: 0
    padding: 0
    & li
        display: inline-block
        margin: 0 0 0 1em

@media screen and (max-width: 1280px)
  .Hero
    &-head
      flex-direction: column
    &-nav ul
      & li
        display: flex
        padding: 1rem